{
    "name": "shadcn-vue-registry",
    "type": "module",
    "version": "0.0.0-beta.10",
    "description": "A powerful CLI tool for automatically generating registry.json files for shadcn-vue component libraries",
    "author": "lonewolfyx <olddrivero.king@qq.com>",
    "license": "MIT",
    "homepage": "https://github.com/ScaffoldCore/shadcn-vue-registry",
    "bugs": {
        "url": "https://github.com/ScaffoldCore/shadcn-vue-registry/issues"
    },
    "keywords": [
        "shadcn-vue",
        "shadcn",
        "registry.json",
        "shadcn-vue-registry"
    ],
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "bin": {
        "svr": "src/bin/index.js",
        "shadcn-vue-registry": "src/bin/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsdown --watch",
        "build": "tsdown",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "prepublishOnly": "pnpm build"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "dependencies": {
        "ansis": "^4.2.0",
        "cac": "^6.7.14",
        "defu": "^6.1.4",
        "find-up": "^8.0.0",
        "glob": "^13.0.0",
        "jiti": "^2.6.1",
        "ora": "^9.0.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.4.2",
        "@lonewolfyx/tsconfig": "^0.0.5",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.17.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "yaml-eslint-parser": "^1.3.2"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
