{
    "name": "shadcn-vue-registry",
    "type": "module",
    "version": "0.0.0.beta",
    "private": true,
    "description": "一个关于 shadcn-vue 版本的 registry.json 文件生成",
    "author": "lonewolfyx <olddrivero.king@qq.com>",
    "license": "MIT",
    "homepage": "https://github.com/ScaffoldCore/shadcn-vue-registry",
    "bugs": {
        "url": "https://github.com/ScaffoldCore/shadcn-vue-registry/issues"
    },
    "keywords": [],
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "bin": {
        "svr": "./src/bin/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsdown --watch",
        "build": "tsdown",
        "lint": "eslint",
        "lint:fix": "eslint --fix"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "dependencies": {
        "cac": "^6.7.14",
        "glob": "^13.0.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.4.2",
        "@lonewolfyx/tsconfig": "^0.0.5",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "lint-staged": "^16.2.7",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.17.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "yaml-eslint-parser": "^1.3.2"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
